<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">
    <fragment
        android:id="@+id/home_dest"
        android:name="ru.mikhailskiy.intensiv.presentation.feed.FeedFragment"
        android:label="@string/home"
        tools:layout="@layout/feed_fragment">

        <action android:id="@+id/action_home_dest_to_movie_detail_fragment"
            app:destination="@id/movie_details_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment
        android:id="@+id/tv_shows_dest"
        android:name="ru.mikhailskiy.intensiv.presentation.tvshows.TvShowsFragment"
        android:label="@string/tv_show"
        tools:layout="@layout/tv_shows_fragment">

        <argument
            android:name="myarg"
            android:defaultValue="Android!" />
        <action
            android:id="@+id/action_tv_shows_dest_to_movie_details_fragment"
            app:destination="@id/movie_details_fragment" />
    </fragment>
    <fragment
        android:id="@+id/movie_details_fragment"
        android:name="ru.mikhailskiy.intensiv.presentation.movie_details.MovieDetailsFragment"
        android:label="details_fragment"
        tools:layout="@layout/movie_details_fragment">
        <argument android:name="movieId"
            app:argType="integer"
            android:defaultValue="-1"/>
    </fragment>
    <fragment
        android:id="@+id/profile_fragment"
        android:name="ru.mikhailskiy.intensiv.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/search_dest"
        android:name="ru.mikhailskiy.intensiv.presentation.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_dest_to_movie_details_fragment"
            app:destination="@id/movie_details_fragment" />
    </fragment>
</navigation>
